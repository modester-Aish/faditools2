{
  "name": "toolshub-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "dev:windows": "set CHOKIDAR_USEPOLLING=true && set WATCHPACK_POLLING=true && next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "clean": "if exist .next rmdir /s /q .next && if exist node_modules rmdir /s /q node_modules && if exist package-lock.json del package-lock.json",
    "clean-dev": "powershell -ExecutionPolicy Bypass -File scripts/clean-dev.ps1"
  },
  "dependencies": {
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.263.1",
    "next": "14.0.3",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10",
    "eslint": "^8",
    "eslint-config-next": "14.0.3",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
